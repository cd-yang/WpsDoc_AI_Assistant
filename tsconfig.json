{
    "compilerOptions": {
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": "src",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src",
            // "./node_modules/wps-jsapi"
        ],
    },
    "include": [
        "./src",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
}